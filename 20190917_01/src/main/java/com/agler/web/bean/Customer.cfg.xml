<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net /hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.agler.web.bean.Customer" table="t_customer">
		<id name="customerId" type="java.lang.String">
			<column name="customerId" length="32" />
			<generator class="uuid" />
		</id>
		<property name="customerName" type="java.lang.String"></property>
		<property name="customerAddress" type="java.lang.String"></property>
	</class>
</hibernate-mapping>